<%- block('title').append('<title>All Campgrounds</title>') %>
<%- layout('layouts/boilerplate') %>
<div class="container">
    <h1 class="mb-4 display-1 text-center">All Campgrounds</h1>

    <div class="mb-4 row justify-content-center">
        <div class="col-md-6 d-flex justify-content-center">
            <a href="/campgrounds/new" class="btn btn-primary">Create a New Campground</a>
        </div>
    </div>

    <div class="mb-3">
        <div class="d-flex flex-column align-items-center">
            <% for(const campground of campgrounds) { %>
                <div class="mb-5 row border">
                    <div class="col-md-6">
                        <img src="<%= campground.image %>" alt="" class="img-fluid">
                    </div>
                    <div class="col-md-6 d-flex flex-column justify-content-evenly">
                        <h2 class="text-center display-4"><%= campground.title %></h2>
                        <p><%= campground.description %></p>
                        <div class="d-flex justify-content-center">
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>